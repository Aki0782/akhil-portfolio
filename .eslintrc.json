{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "bracketSpacing": true,
        "singleQuote": false,
        "arrowParens": "always",
        "semi": true,
        "trailingComma": "none",
        "printWidth": 80
      }
    ]
  }
}